<style>
    .Container-infor {
        border: 1px solid black;
        padding: 30px;
        border-radius: 20px;
        background-color: black;
        box-shadow: 10px 10px 10px 10px #888888;
        position: relative;
        width: 500px;
        color: rgb(113, 118, 123);
    }

    .close {
        position: absolute;
        left: 8px;
        top: 4px;
        color: rgb(113, 118, 123);

    }

    .headContent {
        color: white;
    }

    .select {
        display: flex;
        justify-content: center;
        color: rgb(113, 118, 123);
        gap: 6px;
    }

    .end {
        text-align: center;
    }

    .submit {
        background-color: rgb(113, 118, 123);
        border-radius: 12px;
        border: none;
        color: white;
        padding: 4px 180px;
        text-align: center;
        text-decoration: none;
        display: inline-block;
        font-size: 25px;
    }
</style>
<script type="text/javascript">
    $(document).ready(function () {
        const ddlDay = document.getElementById('Day');
        ddlDay.innerHTML += '<option value="">choose..</option>';
        for (let i = 0; i < 31; i++) {
            ddlDay.innerHTML += '<option value="' + (i + 1) + '">' + (i + 1) + '</option>';
        }
    });
</script>

<script type="text/javascript">
    $(document).ready(function () {
        const ddlYear = document.getElementById('Year');
        ddlYear.innerHTML += '<option value="">choose..</option>';
        for (let i = 1899; i < 2024; i++) {
            ddlYear.innerHTML += '<option value="' + (i + 1) + '">' + (i + 1) + '</option>';
        }
    });
</script>


<div class="d-flex justify-content-center align-items-center " style="height: 90vh;">
    <div class="Container-infor ">
        <div class="close"><i class="fas fa-times" style="font-size: 30px;"></i></div>
        <div class="header">
            <img class="" src="" alt="">
        </div>
        <h1 class="headContent"> Create your account</h1>

        <div class="body">
            <div class="box-floating-1" style="text-overflow: unset;">
                <input type="text" class="form-control" id="floatingname" placeholder="Name">
